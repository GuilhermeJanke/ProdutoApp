@model List<ProdutoAppMVC.Models.Produto>

@{
    ViewData["Title"] = "Produto";
}

<h1>Produtos</h1>

<p>
    <a href="@Url.Action("Create", "Home")" class="btn btn-primary">Adicionar Novo Produto</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Preço</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.Nome</td>
                <td>@produto.Preco.ToString("C")</td>
                <td>
                    <a href="@Url.Action("Edit", "Home", new { id = produto.Id })" class="btn btn-warning">Editar</a>
                    <a href="@Url.Action("Delete", "Home", new { id = produto.Id })" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
